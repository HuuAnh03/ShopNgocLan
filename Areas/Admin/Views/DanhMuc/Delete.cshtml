@model ShopNgocLan.Models.DanhMucSanPham

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Xác nhận Xóa";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between mb-3">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                    <div class="page-title-right">
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bx bx-arrow-back me-1"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-danger-subtle">
                        <h5 class="card-title text-danger mb-0">Bạn có chắc muốn xóa danh mục này?</h5>
                    </div>
                    <div class="card-body">

                        <dl class="row mb-4">
                            <dt class="col-sm-4 fw-medium">ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4 fw-medium">Tên Danh mục:</dt>
                            <dd class="col-sm-8">@Model.TenDanhMuc</dd>

                            <dt class="col-sm-4 fw-medium">Danh mục cha:</dt>
                            <dd class="col-sm-8">
                                @(Model.Parent?.TenDanhMuc ?? "(Không có)")
                            </dd>
                        </dl>

                        @if (ViewData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                <strong>Không thể xóa:</strong> @ViewData["ErrorMessage"]
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                <strong>Không thể xóa:</strong> @TempData["ErrorMessage"]
                            </div>
                        }

                        <form asp-action="Delete">
                            @Html.AntiForgeryToken()

                            <input type="hidden" asp-for="Id" />

                            @if (ViewData["ErrorMessage"] == null && TempData["ErrorMessage"] == null)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="bx bx-trash me-1"></i> Xác nhận Xóa
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-danger" disabled title="Bạn phải xóa các mục con hoặc sản phẩm trước">
                                    <i class="bx bx-trash me-1"></i> Xác nhận Xóa
                                </button>
                            }

                            <a asp-action="Index" class="btn btn-light ms-2">Hủy</a>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>