@model ShopNgocLan.Models.DanhMucSanPham

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Tạo Danh mục mới";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between mb-3">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                    <div class="page-title-right">
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bx bx-arrow-back me-1"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">

                        <form asp-action="Create" method="post">

                            @* Thêm AntiForgeryToken để bảo mật *@
                            @Html.AntiForgeryToken()

                            @* Vùng hiển thị lỗi chung (nếu có) *@
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="TenDanhMuc" class="form-label">Tên Danh mục</label>
                                <input asp-for="TenDanhMuc" class="form-control" />
                                <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ParentId" class="form-label">Danh mục cha</label>

                                @* - asp-for="ParentId" : Gắn thẻ <select> với thuộc tính ParentId của Model
                                  - asp-items="ViewBag.ParentId" : Lấy danh sách <option> từ ViewData/ViewBag
                                *@
                                <select asp-for="ParentId" class="form-select" asp-items="@ViewBag.ParentId">

                                    @* Lựa chọn rỗng: Cho phép tạo danh mục GỐC (ParentId = null) *@
                                    <option value="">-- Chọn danh mục cha (nếu có) --</option>

                                </select>
                                <span asp-validation-for="ParentId" class="text-danger"></span>
                            </div>

                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bx bx-save me-1"></i> Lưu lại
                                </button>
                                <a asp-action="Index" class="btn btn-light">Hủy</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>