@model ShopNgocLan.Models.DanhMucViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết Danh mục: " + Model.DanhMucHienTai.TenDanhMuc;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between mb-3">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                    <div class="page-title-right">
                        <a asp-action="Edit" asp-route-id="@Model.DanhMucHienTai.Id" class="btn btn-primary btn-sm">
                            <i class="bx bx-pencil me-1"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bx bx-arrow-back me-1"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Thông tin cơ bản</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5 fw-medium">ID:</dt>
                            <dd class="col-sm-7">@Model.DanhMucHienTai.Id</dd>

                            <dt class="col-sm-5 fw-medium">Tên Danh mục:</dt>
                            <dd class="col-sm-7">@Model.DanhMucHienTai.TenDanhMuc</dd>

                            <dt class="col-sm-5 fw-medium">Danh mục cha:</dt>
                            <dd class="col-sm-7">
                                @if (Model.DanhMucHienTai.Parent != null)
                                {
                                    <a asp-action="Details" asp-route-id="@Model.DanhMucHienTai.Parent.Id">
                                        @Model.DanhMucHienTai.Parent.TenDanhMuc
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">(Đây là mục gốc)</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Các Danh mục con (@Model.DanhSachCon.Count)</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0 table-hover">
                            <tbody>
                                @if (Model.DanhSachCon.Any())
                                {
                                    @foreach (var itemCon in Model.DanhSachCon)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@itemCon.Id" class="text-dark fw-medium">
                                                    @itemCon.TenDanhMuc
                                                </a>
                                            </td>
                                            <td class="text-end">
                                                
                                                <a asp-action="Details" asp-route-id="@itemCon.Id" class="btn btn-light btn-sm"><iconify-icon icon="solar:eye-broken" class="align-middle fs-18"></iconify-icon></a>
                                                <a asp-action="Edit" asp-route-id="@itemCon.Id" class="btn btn-soft-primary btn-sm">
                                                    <iconify-icon icon="solar:pen-2-broken" class="align-middle fs-18"></iconify-icon>
                                                </a>
                                                
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td class="text-center text-muted py-3">Không có danh mục con.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Các Sản phẩm thuộc danh mục (@Model.DanhSachSanPham.Count)</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0 table-hover">

                            @* BƯỚC 2: Cập nhật vòng lặp @foreach cho sản phẩm *@
                            <tbody>
                                @if (Model.DanhSachSanPham.Any())
                                {
                                    @foreach (var sanpham in Model.DanhSachSanPham)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="flex-shrink-0">
                                                        <img src="@(sanpham.AnhDaiDienUrl ?? "/images/placeholder.jpg")"
                                                             alt="@sanpham.TenSanPham"
                                                             class="avatar-sm rounded object-fit-cover" />
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@sanpham.Id" class="text-dark fw-medium">
                                                            @sanpham.TenSanPham
                                                        </a>
                                                        <p class="text-muted mb-0 fs-13">@sanpham.PriceString</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                <a asp-controller="Products" asp-action="Details" asp-route-id="@sanpham.Id" class="btn btn-light btn-sm"><iconify-icon icon="solar:eye-broken" class="align-middle fs-18"></iconify-icon></a>
                                                <a asp-controller="Products" asp-action="Edit" asp-route-id="@sanpham.Id" class="btn btn-soft-primary btn-sm"><iconify-icon icon="solar:pen-2-broken" class="align-middle fs-18"></iconify-icon></a>
                                                
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td class="text-center text-muted py-3">Không có sản phẩm nào.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>