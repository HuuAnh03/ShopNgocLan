@model ShopNgocLan.Models.ProductListViewModel

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "AdminLayout";
}

<div class="page-content">
    <div class="container-xxl">
        <div class="pagetitle">
            <h3>Xóa sản phẩm</h3>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            Trang tổng quan
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Products" asp-action="Index">
                            Sản phẩm
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Xóa sản phẩm</li>
                </ol>
            </nav>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title text-danger">Xác Nhận Xóa Sản Phẩm</h4>
                    </div>
                    <div class="card-body">

                        <h5 class="text-danger">
                            Bạn có chắc chắn muốn xóa sản phẩm này không?
                        </h5>
                        <p>Hành động này không thể hoàn tác.</p>

                        <hr />

                        <div class="row">
                            <div class="col-md-4 text-center">
                                <img src="@Model.AnhDaiDienUrl"
                                     alt="@Model.TenSanPham"
                                     class="img-fluid mb-3"
                                     style="max-height:220px;object-fit:cover;border-radius:8px;border:1px solid #eee;" />
                            </div>
                            <div class="col-md-8">
                                <h4>@Model.TenSanPham</h4>
                                <dl class="row">
                                    <dt class="col-sm-4">Mã sản phẩm:</dt>
                                    <dd class="col-sm-8">@Model.Id</dd>

                                    <dt class="col-sm-4">Danh mục:</dt>
                                    <dd class="col-sm-8">@Model.TenDanhMuc</dd>

                                    <dt class="col-sm-4">Giá:</dt>
                                    <dd class="col-sm-8">@Model.PriceString</dd>

                                    <dt class="col-sm-4">Tồn kho:</dt>
                                    <dd class="col-sm-8">@Model.TotalStock</dd>

                                    <dt class="col-sm-4">Trạng thái:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Đang hiển thị</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Đã ẩn</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <hr />

                        <form asp-area="Admin" asp-controller="Products" asp-action="Delete" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />

                            <div class="mt-3">
                                <button type="submit" class="btn btn-danger" id="btnConfirmDelete">
                                    XÁC NHẬN XÓA
                                </button>
                                <a asp-area="Admin" asp-controller="Products" asp-action="Index"
                                   class="btn btn-light ms-2">
                                    Hủy
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Nếu vẫn muốn xác nhận bằng SweetAlert trước khi submit form:
        document.getElementById('btnConfirmDelete').addEventListener('click', function (e) {
            e.preventDefault();
            const form = this.closest('form');

            Swal.fire({
                title: 'Xác nhận xóa?',
                text: 'Bạn có chắc chắn muốn xóa sản phẩm "@Model.TenSanPham" không?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    </script>
}
