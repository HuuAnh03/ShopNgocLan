@model ShopNgocLan.Models.DiaChiGiaoHang

@{
    ViewData["Title"] = "Thêm Địa Chỉ Mới";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-content">
    <div class="container-xxl">
        <div class="pagetitle">
            <h3>Thêm địa chỉ</h3>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Trang tổng quan</a>
                    </li>
                    <li class="breadcrumb-item active">Thêm địa chỉ</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <input type="hidden" asp-for="UserId" />

                            <div class="mb-3">
                                <label asp-for="DiaChiChiTiet" class="form-label">Địa chỉ chi tiết (Số nhà, tên đường)</label>
                                <input asp-for="DiaChiChiTiet" class="form-control" placeholder="Ví dụ: 123 Đường ABC" />
                                <span asp-validation-for="DiaChiChiTiet" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label asp-for="PhuongXa" class="form-label">Phường/Xã</label>
                                        <input asp-for="PhuongXa" class="form-control" placeholder="Ví dụ: Phường Bến Nghé" />
                                        <span asp-validation-for="PhuongXa" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label asp-for="QuanHuyen" class="form-label">Quận/Huyện</label>
                                        <input asp-for="QuanHuyen" class="form-control" placeholder="Ví dụ: Quận 1" />
                                        <span asp-validation-for="QuanHuyen" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label asp-for="TinhThanhPho" class="form-label">Tỉnh/Thành phố</label>
                                        <input asp-for="TinhThanhPho" class="form-control" placeholder="Ví dụ: TP. Hồ Chí Minh" />
                                        <span asp-validation-for="TinhThanhPho" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="LaMacDinh" class="form-check-input" type="checkbox" />
                                <label asp-for="LaMacDinh" class="form-check-label">Đặt làm địa chỉ mặc định</label>
                            </div>

                            <div class="mt-4">
                                <input type="submit" value="Thêm Mới" class="btn btn-primary" />
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-light">Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}