@model List<ShopNgocLan.Models.Size>

@{
    ViewData["Title"] = "Quản lý Size";
    Layout = "AdminLayout";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />

<div class="page-content">
    <div class="container-xxl">
         <div class="pagetitle">
            <h3>Quản lý kích thước</h3>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Trang tổng quan</a>
                    </li>
                    <li class="breadcrumb-item active">Quản lý kích thước</li>
                </ol>
            </nav>
        </div>
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    DANH SÁCH SIZE (@Model.Count)
                </h6>

                <div class="search-box ms-auto me-3">
                    <div style="position: relative; flex-grow: 1;">
                        <input type="text"
                               class="form-control"
                               placeholder="Tìm theo tên size..."
                               id="searchInput" />
                    </div>
                </div>

                <button type="button" id="btn-create-size" class="btn btn-primary btn-sm">
                    <i class="fa fa-plus"></i> Thêm Size
                </button>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="sizeTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width: 10%;">ID</th>
                                <th style="width: 60%;">Tên Size</th>
                                <th style="width: 30%;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* DataTables sẽ fill dữ liệu *@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Modal Thêm / Sửa Size -->
<div class="modal fade" id="sizeModal" tabindex="-1" role="dialog" aria-labelledby="sizeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="sizeModalLabel">Thêm / Sửa Size</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="sizeForm">
                @Html.AntiForgeryToken()
                <input type="hidden" id="Size_Id" name="Id" value="0" />

                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label for="Size_TenSize" class="form-label">Tên Size (*)</label>
                        <input type="text" class="form-control" id="Size_TenSize" name="TenSize" maxlength="50" required />
                        <div class="text-danger" id="errorTenSize"></div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary" id="modalSubmitBtn">Lưu Size</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        var dataTable;
        const antiForgeryToken = $('input[name="__RequestVerificationToken"]').val() || '';

        // Dữ liệu từ server (List<Size>)
        const serverData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
            Model,
            new System.Text.Json.JsonSerializerOptions {
                ReferenceHandler = System.Text.Json.Serialization.ReferenceHandler.IgnoreCycles
            }
        ));

        $(document).ready(function () {

            loadDataTable();

            // search
            $('#searchInput').on('keyup', function () {
                dataTable.search(this.value).draw();
            });

            // mở modal tạo size
            $('#btn-create-size').click(function () {
                $('#sizeForm')[0].reset();
                $('#Size_Id').val(0);
                $('#errorTenSize').text('');
                $('#sizeModalLabel').text('Thêm Size mới');

                var sizeModal = new bootstrap.Modal(document.getElementById('sizeModal'));
                sizeModal.show();
            });

            // submit form
            $('#sizeForm').submit(function (e) {
                e.preventDefault();
                saveSize();
            });

            // reset khi đóng modal
            $('#sizeModal').on('hidden.bs.modal', function () {
                $('#sizeForm')[0].reset();
                $('#errorTenSize').text('');
            });
        });

        // ================== 1. Load DataTables ==================
        function loadDataTable() {
            if ($.fn.DataTable.isDataTable('#sizeTable')) {
                $('#sizeTable').DataTable().destroy();
            }

            dataTable = $('#sizeTable').DataTable({
                data: serverData,
                columns: [
                    { data: "Id", width: "10%" },
                    { data: "TenSize", width: "60%" },
                    {
                        data: "Id",
                        render: function (data, type, row) {
                            return `
                                <button class="btn btn-sm btn-warning me-1 mb-1" onclick="openEditModal(${data})">
                                    Sửa
                                </button>
                                <button class="btn btn-sm btn-danger mb-1" onclick="deleteSize(${data})">
                                    Xóa
                                </button>
                            `;
                        },
                        orderable: false,
                        width: "30%"
                    }
                ],
                language: {
                    "sProcessing": "Đang xử lý...",
                    "sLengthMenu": "Xem _MENU_ mục",
                    "sZeroRecords": "Không tìm thấy kết quả nào",
                    "sInfo": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ mục",
                    "sInfoEmpty": "Đang xem 0 đến 0 trong tổng số 0 mục",
                    "sInfoFiltered": "(Được lọc từ tổng số _MAX_ mục)",
                    "sSearch": "",
                    "oPaginate": {
                        "sFirst": "Đầu",
                        "sPrevious": "Trước",
                        "sNext": "Tiếp",
                        "sLast": "Cuối"
                    }
                },
                dom: 'lrtip',
                order: [[0, "asc"]]
            });
        }

        // ================== 2. Thêm / Sửa Size ==================
        function saveSize() {
            var isCreating = $('#Size_Id').val() == 0;

            var endpoint = isCreating
                ? '@Url.Action("Create", "Size", new { Area = "Admin" })'
                : '@Url.Action("Edit", "Size", new { Area = "Admin" })';

            var sizeData = {
                Id: parseInt($('#Size_Id').val()),
                TenSize: $('#Size_TenSize').val()
            };

            if (isCreating) {
                delete sizeData.Id;
            }

            $.ajax({
                url: endpoint,
                type: "POST",
                contentType: "application/json",
                headers: {
                    "RequestVerificationToken": antiForgeryToken
                },
                data: JSON.stringify(sizeData),
                beforeSend: function () {
                    $('#modalSubmitBtn').attr('disabled', true).text('Đang xử lý...');
                },
                success: function (response) {
                    $('#modalSubmitBtn').attr('disabled', false).text('Lưu Size');

                    if (response.success) {
                        Swal.fire('Thành công!', response.message, 'success')
                            .then(() => {
                                // reload để sync với server
                                window.location.reload();
                            });

                        var modalInstance = bootstrap.Modal.getInstance(document.getElementById('sizeModal'));
                        modalInstance.hide();
                    } else {
                        if (response.message && response.message.includes("Tên size đã tồn tại")) {
                            $('#errorTenSize').text(response.message);
                        } else {
                            Swal.fire('Thất bại', response.message || 'Đã xảy ra lỗi.', 'error');
                        }
                    }
                },
                error: function (xhr) {
                    $('#modalSubmitBtn').attr('disabled', false).text('Lưu Size');
                    var msg = xhr.status === 403
                        ? "Bạn không có quyền thực hiện thao tác này."
                        : "Đã xảy ra lỗi hệ thống.";
                    Swal.fire('Lỗi', msg, 'error');
                }
            });
        }

        // ================== 3. Mở modal Sửa ==================
        function openEditModal(id) {
            var rowData = serverData.find(s => s.Id === id);

            if (rowData) {
                $('#Size_Id').val(rowData.Id);
                $('#Size_TenSize').val(rowData.TenSize);
                $('#errorTenSize').text('');

                $('#sizeModalLabel').text('Sửa Size: ' + rowData.TenSize);

                var sizeModal = new bootstrap.Modal(document.getElementById('sizeModal'));
                sizeModal.show();
            }
        }

        // ================== 4. Xóa Size ==================
        function deleteSize(id) {
            Swal.fire({
                title: 'Bạn có chắc chắn?',
                text: 'Size sẽ bị xóa vĩnh viễn (nếu chưa gắn với sản phẩm).',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Đồng ý',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Size", new { Area = "Admin" })',
                        type: "POST",
                        contentType: "application/json",
                        headers: {
                            "RequestVerificationToken": antiForgeryToken
                        },
                        data: JSON.stringify(id),
                        success: function (response) {
                            if (response.success) {
                                Swal.fire('Đã xóa!', response.message, 'success')
                                    .then(() => window.location.reload());
                            } else {
                                Swal.fire('Thất bại', response.message, 'error');
                            }
                        },
                        error: function (xhr) {
                            var msg = xhr.status === 403
                                ? "Bạn không có quyền thực hiện thao tác này."
                                : "Lỗi kết nối máy chủ.";
                            Swal.fire('Lỗi', msg, 'error');
                        }
                    });
                }
            });
        }
    </script>
}
